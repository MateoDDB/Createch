  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <div class="dropdown">
      <a id="dLabel" data-target="#" href="" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" class="navbar-wagon-item navbar-wagon-link">
        <% if current_page.path == "index.html"%>
          <span class="" style="font-weight: bold; font-size: 22px;">Accueil</span>
        <% else %>
          Accueil
        <% end %>
        <span class="caret"></span>
      </a>

      <ul class="dropdown-menu" aria-labelledby="dLabel">
