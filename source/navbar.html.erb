        <li><%= link_to "Innovation R&D", "index.html#innovation" %></li>
      </ul>
    </div>

    <div class="dropdown">
      <a id="dLabel" data-target="#" href="" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" class="navbar-wagon-item navbar-wagon-link">
        <% if current_page.path == "produit.html"%>
          <span class="" style="font-weight: bold; font-size: 22px;">Produits</span>
        <% else %>
          Produits
        <% end %>
        <span class="caret"></span>
      </a>

      <ul class="dropdown-menu" aria-labelledby="dLabel">
        <li><%= link_to "Nos Produits", "produit.html"%></li>
        <li><%= link_to "Atalaïa", "produit.html#atalaia"%></li>
        <li><%= link_to "CPL", "produit.html#cpl" %></li>
        <li><%= link_to "Vidéo surveillance", "produit.html#video" %></li>
      </ul>
    </div>

    <div class="dropdown">
      <a id="dLabel" data-target="#" href="" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" class="navbar-wagon-item navbar-wagon-link">
        <% if current_page.path == "blog.html"%>
          <span class="" style="font-weight: bold; font-size: 22px;">Références - Blog</span>
        <% else %>
          Références - Blog
        <% end %>
        <span class="caret"></span>
      </a>

      <ul class="dropdown-menu" aria-labelledby="dLabel">
        <li><%= link_to "Clients références", "blog.html"%></li>
        <li><%= link_to "Chiffres", "blog.html#chiffres"%></li>
        <li><%= link_to "Articles", "blog.html#article"%></li>
      </ul>
    </div>

    <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Activités", "index.html"%></li>
          <li><%= link_to "Produits", "produit.html"%></li>
          <li><%= link_to "Blog", "blog.html"%></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Activités", "index.html"%></li>
        <li><%= link_to "Produits", "produit.html"%></li>
        <li><%= link_to "Blog", "blog.html"%></li>
      </ul>
